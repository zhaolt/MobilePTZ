<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/camera_setting_full_container"
                android:layout_width="@dimen/right_fast_setting_width"
                android:layout_height="match_parent"
                android:background="@drawable/activity_dialog_style_shape">
    <RelativeLayout
        android:id="@+id/rl_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_dialog_title_height"
        android:background="@color/color3">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/permission_camera"
            android:textColor="@color/color0"
            android:textSize="@dimen/textSize2"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/frame_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_title_bar"/>
</RelativeLayout>