<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color3">

    <FrameLayout
        android:id="@+id/layout_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.ziguang.ptz.widget.Grid
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <FrameLayout
        android:id="@+id/right_menu_bg"
        android:layout_width="@dimen/camera_act_menu_width"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/color2"
        android:visibility="gone"/>

    <include
        android:id="@+id/menu_fast_setting"
        layout="@layout/layout_camera_fast_setting_menu"/>
    <include
        android:id="@+id/take_mode_menu"
        layout="@layout/layout_take_mode_menu"/>
    <include
        layout="@layout/camera_act_menu_left"/>



    <include
        android:id="@+id/right_menu"
        android:layout_width="@dimen/camera_act_menu_width"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        layout="@layout/camera_act_menu_right"/>


    <RadioGroup
        android:id="@+id/antibanding_group"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <RadioButton
            android:id="@+id/antibanding_50hz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="抗闪烁-50HZ"/>
        <RadioButton
            android:id="@+id/antibanding_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="抗闪烁-自动"/>
    </RadioGroup>

</FrameLayout>