<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color3">

    <FrameLayout
        android:id="@+id/layout_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.ziguang.ptz.widget.Grid
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <FrameLayout
        android:id="@+id/right_menu_bg"
        android:layout_width="@dimen/camera_act_menu_width"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/color2"
        android:visibility="gone"/>

    <include
        android:id="@+id/menu_fast_setting"
        layout="@layout/layout_camera_fast_setting_menu"/>
    <include
        android:id="@+id/take_mode_menu"
        layout="@layout/layout_take_mode_menu"/>
    <include
        layout="@layout/camera_act_menu_left"/>



    <include
        android:id="@+id/right_menu"
        android:layout_width="@dimen/camera_act_menu_width"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        layout="@layout/camera_act_menu_right"/>
    <RelativeLayout
        android:id="@+id/rl_recording_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="@dimen/common_margin_border"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_recording_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textColor="@color/color0"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_remaining_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_recording_duration"
            android:text="/00:00:00"
            android:layout_marginRight="5dp"
            android:textColor="@color/color0"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_volume_0"
            android:layout_toEndOf="@id/tv_remaining_duration"/>
    </RelativeLayout>

</FrameLayout>