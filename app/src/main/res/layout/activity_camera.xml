<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000">

    <FrameLayout
        android:id="@+id/layout_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.ziguang.ptz.widget.Grid
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"/>

    <include
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        layout="@layout/camera_act_menu_right"/>

    <RadioGroup
        android:id="@+id/white_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|top">
        <RadioButton
            android:id="@+id/white_balance_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动"
            android:textColor="#ffffff"/>
        <RadioButton
            android:id="@+id/white_balance_incandescent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="白炽灯"
            android:textColor="#ffffff"/>
        <RadioButton
            android:id="@+id/white_balance_cloudy_daylight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阴天"
            android:textColor="#ffffff"/>
        <RadioButton
            android:id="@+id/white_balance_fluorescent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="荧光灯"
            android:textColor="#ffffff"/>
        <RadioButton
            android:id="@+id/white_balance_daylight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日光"
            android:textColor="#ffffff"/>
    </RadioGroup>

    <RadioGroup
        android:id="@+id/flash_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true">
        <RadioButton
            android:id="@+id/flash_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="闪光灯-自动"
            android:textColor="#ffffff"/>
        <RadioButton
            android:id="@+id/flash_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="闪光灯-关闭"
            android:textColor="#ffffff"/>
        <RadioButton
            android:id="@+id/flash_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="闪光灯-开启"
            android:textColor="#ffffff"/>
        <RadioButton
            android:id="@+id/flash_all_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="闪光灯-常亮"
            android:textColor="#ffffff"/>
    </RadioGroup>
    <ImageView
        android:id="@+id/iv_shutter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@mipmap/shutter"/>

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="前置摄像头"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

    <RadioGroup
        android:id="@+id/antibanding_group"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/antibanding_50hz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="抗闪烁-50HZ"/>
        <RadioButton
            android:id="@+id/antibanding_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="抗闪烁-自动"/>
    </RadioGroup>
</RelativeLayout>