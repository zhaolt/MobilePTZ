<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/camera_act_menu_width"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="4">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@null"
        android:layout_gravity="center"
        android:src="@mipmap/lp_quicksetting_home"/>

    <ImageButton
        android:id="@+id/iv_camera_setting"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@null"
        android:layout_gravity="center"
        android:src="@drawable/camera_setting_selector"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@null"
        android:layout_gravity="center"
        android:src="@drawable/gimbal_setting_selector"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@null"
        android:layout_gravity="center"
        android:src="@mipmap/lp_quicksetting_setting"/>

</LinearLayout>