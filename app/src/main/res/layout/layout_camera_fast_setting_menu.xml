<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="190dp"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:layout_marginRight="@dimen/camera_act_menu_width"
    android:background="@color/color1"
    android:orientation="vertical"
    android:visibility="gone">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_dialog_title_height"
        android:background="@color/color2">

        <TextView
            android:id="@+id/tv_fast_setting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/permission_camera"
            android:textColor="@color/color0"
            android:textSize="@dimen/textSize2"/>

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/icon_arrow_left"
            android:visibility="gone"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frame_fast_setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>