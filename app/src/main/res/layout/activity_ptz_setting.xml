<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color3"
              android:orientation="vertical">

    <com.ziguang.ptz.widget.TitleBar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:back_text="@string/title_back"
        app:back_text_img="@mipmap/icon_back_blue"
        app:title_text="@string/setting_common"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color4"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="32dp"
                android:layout_height="@dimen/setting_item_height">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color4"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/common_margin_border"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快速配置"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color4"
                    android:textSize="@dimen/textSize1"
                    android:layout_marginLeft="@dimen/common_margin_border"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color4"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/common_margin_border"/>
                <RadioGroup
                    android:layout_width="320dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common_margin_border"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:layout_marginRight="-1dp"
                        android:gravity="center"
                        android:textSize="@dimen/textSize2"
                        android:text="慢"
                        android:textColor="@color/tab_radio_button_colors"
                        android:layout_weight="1"
                        android:background="@drawable/tab_radio_left_selector"/>
                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:layout_marginRight="-1dp"
                        android:gravity="center"
                        android:textSize="@dimen/textSize2"
                        android:textColor="@color/tab_radio_button_colors"
                        android:background="@drawable/tab_radio_middle_selector"
                        android:text="中"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:layout_marginRight="-1dp"
                        android:gravity="center"
                        android:textSize="@dimen/textSize2"
                        android:text="快"
                        android:textColor="@color/tab_radio_button_colors"
                        android:background="@drawable/tab_radio_middle_selector"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:layout_marginRight="-1dp"
                        android:gravity="center"
                        android:textSize="@dimen/textSize2"
                        android:text="自定义1"
                        android:textColor="@color/tab_radio_button_colors"
                        android:background="@drawable/tab_radio_middle_selector"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:layout_marginRight="-1dp"
                        android:gravity="center"
                        android:textSize="@dimen/textSize2"
                        android:layout_weight="1"
                        android:textColor="@color/tab_radio_button_colors"
                        android:background="@drawable/tab_radio_right_selector"
                        android:text="自定义2"/>
                </RadioGroup>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color4"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/common_margin_border"/>
                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/common_margin_border"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="高级"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color0"
                    android:textSize="@dimen/textSize3"
                    android:layout_marginLeft="@dimen/common_margin_border"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="32dp"
                android:layout_height="@dimen/setting_item_height">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color4"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/common_margin_border"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="平滑跟踪设置"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color4"
                    android:textSize="@dimen/textSize1"
                    android:layout_marginLeft="@dimen/common_margin_border"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color4"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/common_margin_border"/>
                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/common_margin_border"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="方向"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color0"
                    android:textSize="@dimen/textSize3"
                    android:layout_marginLeft="@dimen/common_margin_border"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color4"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/common_margin_border"/>
                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/common_margin_border"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="俯仰"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color0"
                    android:textSize="@dimen/textSize3"
                    android:layout_marginLeft="@dimen/common_margin_border"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height"
                android:layout_marginTop="32dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/common_margin_border"
                    android:background="@color/color4"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common_margin_border"
                    android:text="控制杆"
                    android:textColor="@color/color4"
                    android:textSize="@dimen/textSize1"/>

                <TextView
                    android:id="@+id/tv_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common_margin_border"
                    android:layout_marginRight="35dp"
                    android:text="速度"
                    android:textColor="@color/color4"
                    android:textSize="@dimen/textSize1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_margin_border"
                    android:text="平滑"
                    android:textColor="@color/color4"
                    android:textSize="@dimen/textSize1"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/tv_speed"
                    android:layout_marginEnd="34dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color4"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/common_margin_border"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="方向"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color0"
                    android:textSize="@dimen/textSize3"
                    android:layout_marginLeft="@dimen/common_margin_border"/>
                <Button
                    android:id="@+id/bt_gently"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:background="@drawable/common_button_selector"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/bt_quick"
                    android:text="0"
                    android:textColor="@color/tab_radio_button_colors"
                    android:layout_marginRight="@dimen/common_margin_border"/>
                <Button
                    android:id="@+id/bt_quick"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="0"
                    android:background="@drawable/common_button_selector"
                    android:textColor="@color/tab_radio_button_colors"
                    android:layout_marginRight="@dimen/common_margin_border"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="32dp"
                android:layout_height="@dimen/setting_item_height">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color4"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/common_margin_border"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="校准"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color4"
                    android:textSize="@dimen/textSize1"
                    android:layout_marginLeft="@dimen/common_margin_border"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color4"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/common_margin_border"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="水平校准"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color0"
                    android:textSize="@dimen/textSize3"
                    android:layout_marginLeft="@dimen/common_margin_border"/>
                <Button
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="开始校准"
                    android:background="@drawable/common_button_selector"
                    android:textColor="@color/tab_radio_button_colors"
                    android:layout_marginRight="@dimen/common_margin_border"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color4"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/common_margin_border"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自动校准"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color0"
                    android:textSize="@dimen/textSize3"
                    android:layout_marginLeft="@dimen/common_margin_border"/>
                <Button
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="开始校准"
                    android:background="@drawable/common_button_selector"
                    android:textColor="@color/tab_radio_button_colors"
                    android:layout_marginRight="@dimen/common_margin_border"/>
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>