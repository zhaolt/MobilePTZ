<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/camera_act_menu_width"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="5">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@null"
        android:src="@mipmap/camera_change_video"
        android:layout_gravity="center"/>

    <ImageButton
        android:id="@+id/btn_take_mode"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@null"
        android:layout_gravity="center"
        android:src="@drawable/photo_mode_simple_selector"/>

    <ImageButton
        android:id="@+id/btn_shutter"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@null"
        android:layout_gravity="center"
        android:src="@mipmap/photo_shutter"/>

    <ImageButton
        android:id="@+id/btn_camera_switch"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@null"
        android:layout_gravity="center"
        android:src="@drawable/camera_switch_selector"/>

    <ImageButton
        android:id="@+id/btn_album"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@null"
        android:layout_gravity="center"
        android:src="@drawable/icon_album_selector"/>
</LinearLayout>