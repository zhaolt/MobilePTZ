<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/camera_act_menu_width"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@drawable/camera_left_menu_shape"
              android:weightSum="4.5">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2">
        <com.ziguang.ptz.widget.LengthwaysSwitch
            android:id="@+id/mode_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>


    <ImageButton
        android:id="@+id/btn_take_mode"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="@null"
        android:layout_gravity="center"
        android:src="@drawable/photo_mode_simple_selector"/>

    <ImageButton
        android:id="@+id/btn_shutter"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:background="@null"
        android:layout_gravity="center"
        android:src="@mipmap/photo_shutter"/>

    <ImageButton
        android:id="@+id/btn_camera_switch"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:background="@null"
        android:layout_gravity="center"
        android:src="@drawable/camera_switch_selector"/>

    <ImageButton
        android:id="@+id/btn_album"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="@null"
        android:layout_gravity="center"
        android:src="@drawable/icon_album_selector"/>
</LinearLayout>